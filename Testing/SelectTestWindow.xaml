<Window x:Class="Testing.SelectTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="SelectTestWindow" Height="200" Width="300" x:Name="Window"
        DataContext="{Binding Source={StaticResource ViewModel}}"
        Validation.Error="SelectTestWindow_OnError">
    <StackPanel Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Db Name -->
            <TextBlock Text="Тест" />
            <TextBox Grid.Column="1" Grid.Row="0" Margin="5" Text="{Binding Path=DbFileName, 
                    NotifyOnValidationError=True, ValidatesOnDataErrors=True}" 
                    LostFocus="TextBox_OnLostFocus" x:Name="DbNameTextBox"/>

            <!-- Question Count-->
            <TextBlock Text="Кол-во вопросов" Grid.Column="0" Grid.Row="1" />
            <TextBox Grid.Column="1" Grid.Row="1" Margin="5" Text="{Binding Path=QuestionsCount,  
                     NotifyOnValidationError=True, ValidatesOnDataErrors=True}" 
                     TextChanged="TextBox_OnLostFocus" x:Name="QuestionCountTextBox"/>

            <!-- Time Span -->
            <TextBlock Text="Время(мин.)" Grid.Column="0" Grid.Row="2"/>
            <TextBox Grid.Column="1" Grid.Row="2" Margin="5" Text="{Binding Path=TestTime, 
            NotifyOnValidationError=True, ValidatesOnDataErrors=True}" 
                     TextChanged="TextBox_OnLostFocus" x:Name="TimeTextBox"/>
            
        </Grid>
        
        <CheckBox Content="Экзамен" IsChecked="{Binding IsExam}"></CheckBox>
        
        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Margin="10" Content="Принять" x:Name="SendButton" 
                    Command="{Binding SendTestInfo}"
                    CommandParameter="{Binding ElementName=Window}"/>
            <Button Margin="10" Content="Отмена" Command="{Binding CloseWindow}"
                    CommandParameter="{Binding ElementName=Window}" />
        </StackPanel>
    </StackPanel>
</Window>
